# =============================================================================
# Configuration MSSanté Operator
# Copier ce fichier vers .env et adapter les valeurs
# =============================================================================

# -----------------------------------------------------------------------------
# Général
# -----------------------------------------------------------------------------
NODE_ENV=development
DOMAIN=localhost

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_DB=mssante
POSTGRES_USER=mssante
POSTGRES_PASSWORD=changeme_postgres_password

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=changeme_redis_password

# -----------------------------------------------------------------------------
# Sécurité API
# -----------------------------------------------------------------------------
JWT_SECRET=changeme_jwt_secret_at_least_32_characters
JWT_EXPIRES_IN=24h

# -----------------------------------------------------------------------------
# Pro Santé Connect (PSC)
# -----------------------------------------------------------------------------
PSC_CLIENT_ID=
PSC_CLIENT_SECRET=
PSC_REDIRECT_URI=https://localhost/auth/callback
PSC_ISSUER_URL=https://auth.esante.gouv.fr/auth/realms/esante-wallet

# -----------------------------------------------------------------------------
# Annuaire National Santé
# -----------------------------------------------------------------------------
ANS_API_KEY=
ANS_API_URL=https://gateway.api.esante.gouv.fr

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
REACT_APP_API_URL=http://localhost:3000
API_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Monitoring (optionnel)
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_grafana_password

# -----------------------------------------------------------------------------
# SMTP Relay (optionnel)
# -----------------------------------------------------------------------------
RELAY_HOST=
RELAY_USER=
RELAY_PASSWORD=

# -----------------------------------------------------------------------------
# Logs
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json