{
  "name": "mssante-api",
  "version": "1.0.0",
  "description": "API Backend MSSanté - Plateforme Opérateur de Messagerie Sécurisée de Santé",
  "main": "src/server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src src/server.js",
    "dev:debug": "nodemon --watch src --inspect=0.0.0.0:9229 src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "migrate": "node scripts/migrate.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:status": "node scripts/migrate.js status",
    "seed": "node scripts/seed.js",
    "seed:dev": "node scripts/seed.js --env=development",
    "db:reset": "npm run migrate:down && npm run migrate:up && npm run seed:dev",
    "healthcheck": "node healthcheck.js",
    "docs:generate": "jsdoc -c jsdoc.config.json",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "clean": "rm -rf node_modules coverage dist logs/*.log",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "html-to-text": "^9.0.5",
    "http-proxy-middleware": "^3.0.2",
    "imapflow": "^1.0.164",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mailparser": "^3.7.1",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "nodemailer": "^6.9.15",
    "on-finished": "^2.4.1",
    "openid-client": "^5.7.0",
    "pg": "^8.12.0",
    "pg-pool": "^3.6.2",
    "redis": "^4.7.0",
    "response-time": "^2.3.2",
    "sanitize-html": "^2.13.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.3",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/unit/setup.js"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/*",
      "docs/*",
      "logs/*",
      "coverage/*"
    ],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "keywords": [
    "mssante",
    "sante",
    "email",
    "healthcare",
    "ans",
    "igc-sante",
    "pro-sante-connect",
    "oauth2",
    "imap",
    "smtp",
    "express",
    "nodejs"
  ],
  "author": "Votre Organisation",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/votre-org/mssante-operator.git"
  },
  "bugs": {
    "url": "https://github.com/votre-org/mssante-operator/issues"
  },
  "homepage": "https://github.com/votre-org/mssante-operator#readme"
}
