# ===========================================
# FRONTEND - Variables d'environnement
# ===========================================
# Copier ce fichier en .env.development ou .env.production
# et renseigner les valeurs appropriées

# ===========================================
# API BACKEND
# ===========================================
REACT_APP_API_URL=http://localhost:3001/api/v1
REACT_APP_API_TIMEOUT=30000

# ===========================================
# PRO SANTÉ CONNECT (OAuth2)
# ===========================================
REACT_APP_PSC_CLIENT_ID=votre_client_id_psc
REACT_APP_PSC_AUTHORIZATION_URL=https://auth.esw.esante.gouv.fr/auth/realms/esante-wallet/protocol/openid-connect/auth
REACT_APP_PSC_REDIRECT_URI=http://localhost:3000/auth/psc/callback
REACT_APP_PSC_SCOPES=openid email profile scope_all

# ===========================================
# APPLICATION
# ===========================================
REACT_APP_NAME=MSSanté Operator
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development

# ===========================================
# FONCTIONNALITÉS
# ===========================================
REACT_APP_ENABLE_WEBMAIL=true
REACT_APP_ENABLE_ADMIN=true
REACT_APP_ENABLE_MONITORING=true

# ===========================================
# DOMAINE OPÉRATEUR
# ===========================================
REACT_APP_OPERATOR_DOMAIN=votre-operateur.mssante.fr
REACT_APP_OPERATOR_NAME=Nom de votre établissement

# ===========================================
# SUPPORT
# ===========================================
REACT_APP_SUPPORT_EMAIL=support@votre-operateur.mssante.fr
REACT_APP_SUPPORT_PHONE=01 23 45 67 89

